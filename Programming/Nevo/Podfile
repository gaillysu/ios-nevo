platform :ios, '9.0'
target 'LunaR' do
  use_frameworks!
  pod 'NJKWebViewProgress'
  pod 'FMDB', '~> 2.6.2'
  pod 'Alamofire'
  pod 'BRYXBanner'
  pod 'Fabric'
  pod 'Crashlytics'
  pod 'Charts',branch:'Chart2.2.5-Swift3.0',git:'https://github.com/danielgindi/Charts.git'
  pod 'MRProgress'
  pod 'UIColor_Hex_Swift',branch:'Swift-3.0',git:'https://github.com/yeahdongcn/UIColor-Hex-Swift.git'
  pod 'RegexKitLite'
  pod 'SwiftyTimer', git: 'https://github.com/radex/SwiftyTimer.git', branch: 'swift3'
  pod 'LTNavigationBar'
  pod 'ActiveLabel',branch:'swift-3',git: 'https://github.com/optonaut/ActiveLabel.swift.git'
  pod 'IQKeyboardManagerSwift', '~> 4.0.6'
  pod 'CVCalendar', '~> 1.4.0'
  pod 'RealmSwift'
  pod 'SwiftEventBus', :tag => '2.1.0', :git => 'https://github.com/cesarferreira/SwiftEventBus.git'
  pod 'XCGLogger', '~> 4.0.0'
  pod 'SwiftyJSON'
  pod 'iOSDFULibrary',branch:'swift3',:git => 'https://github.com/NordicSemiconductor/IOS-Pods-DFU-Library.git'
  pod 'PopupController'
  pod 'SnapKit', '~> 3.0.1'
  pod 'Solar'
  pod 'Timepiece'
  pod 'RSKImageCropper'
  pod 'Kingfisher', '~> 3.0'
  target 'LunaRTests' do
      
    inherit! :search_paths
    # Pods for testing
  end

end


target 'Nevo' do
  use_frameworks!
    pod 'NJKWebViewProgress'
    pod 'FMDB', '~> 2.6.2'
    pod 'Alamofire'
    pod 'BRYXBanner'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'Charts',branch:'Chart2.2.5-Swift3.0',git:'https://github.com/danielgindi/Charts.git'
    pod 'MRProgress'
    pod 'UIColor_Hex_Swift',branch:'Swift-3.0',git:'https://github.com/yeahdongcn/UIColor-Hex-Swift.git'
    pod 'RegexKitLite'
    pod 'SwiftyTimer', git: 'https://github.com/radex/SwiftyTimer.git', branch: 'swift3'
    pod 'LTNavigationBar'
    pod 'ActiveLabel',branch:'swift-3',git: 'https://github.com/optonaut/ActiveLabel.swift.git'
    pod 'IQKeyboardManagerSwift', '~> 4.0.6'
    pod 'CVCalendar', '~> 1.4.0'
    pod 'RealmSwift'
    pod 'SwiftEventBus', :tag => '2.1.0', :git => 'https://github.com/cesarferreira/SwiftEventBus.git'
    pod 'XCGLogger', '~> 4.0.0'
    pod 'SwiftyJSON'
    pod 'iOSDFULibrary',branch:'swift3',:git => 'https://github.com/NordicSemiconductor/IOS-Pods-DFU-Library.git'
    pod 'PopupController'
    pod 'SnapKit', '~> 3.0.1'
    pod 'Solar'
    pod 'Timepiece'
    pod 'RSKImageCropper'
  target 'NevoTests' do
    inherit! :search_paths
    # Pods for testing
  end

end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['SWIFT_VERSION'] = '3.0'
        end
    end
end
