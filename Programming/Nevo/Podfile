platform :ios, '9.0'
target 'LunaR' do
  use_frameworks!
  pod 'NJKWebViewProgress'
  pod 'FMDB', '~> 2.6.2'
  pod 'Alamofire'
  pod 'BRYXBanner'
  pod 'Fabric'
  pod 'Crashlytics'
  pod 'Charts', '~> 3.0.0'
  pod 'MRProgress'
  pod 'UIColor_Hex_Swift'
  pod 'RegexKitLite'
  pod 'SwiftyTimer'
  pod 'LTNavigationBar'
  pod 'ActiveLabel'
  pod 'IQKeyboardManagerSwift', '~> 4.0.6'
  pod 'CVCalendar', '~> 1.4.0'
  pod 'RealmSwift'
  pod 'SwiftEventBus', :tag => '2.2.0', :git => 'https://github.com/cesarferreira/SwiftEventBus.git'
  pod 'XCGLogger', '~> 4.0.0'
  pod 'SwiftyJSON'
  pod 'iOSDFULibrary',branch:'swift3',:git => 'https://github.com/NordicSemiconductor/IOS-Pods-DFU-Library.git'
  pod 'PopupController'
  pod 'SnapKit', '~> 3.0.1'
  pod 'Solar'
  pod 'RSKImageCropper'
  pod 'Kingfisher', '~> 3.1.3'
  pod 'MSColorPicker'
  target 'LunaRTests' do
      
    inherit! :search_paths
    # Pods for testing
  end

end


target 'Nevo' do
    use_frameworks!
    pod 'NJKWebViewProgress'
    pod 'FMDB', '~> 2.6.2'
    pod 'Alamofire'
    pod 'BRYXBanner'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'Charts', '~> 3.0.0'
    pod 'MRProgress'
    pod 'UIColor_Hex_Swift'
    pod 'RegexKitLite'
    pod 'SwiftyTimer'
    pod 'LTNavigationBar'
    pod 'ActiveLabel'
    pod 'IQKeyboardManagerSwift', '~> 4.0.6'
    pod 'CVCalendar', '~> 1.4.0'
    pod 'RealmSwift'
    pod 'SwiftEventBus', :tag => '2.2.0', :git => 'https://github.com/cesarferreira/SwiftEventBus.git'
    pod 'XCGLogger', '~> 4.0.0'
    pod 'SwiftyJSON'
    pod 'iOSDFULibrary',branch:'swift3',:git => 'https://github.com/NordicSemiconductor/IOS-Pods-DFU-Library.git'
    pod 'PopupController'
    pod 'SnapKit', '~> 3.0.1'
    pod 'Solar'
    pod 'RSKImageCropper'
    pod 'Kingfisher', '~> 3.1.3'
    pod 'MSColorPicker'
  target 'NevoTests' do
    inherit! :search_paths
    # Pods for testing
  end

end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['SWIFT_VERSION'] = '3.0'
        end
    end
end
